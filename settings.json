{
  // =========================
  // üß† Agente (acciones IA / herramientas)
  // =========================
  "agent": {
    "always_allow_tool_actions": true
  },

  // =========================
  // üé® Apariencia (Tema, iconos, fuentes)
  // =========================
  "theme": "JetBrains New Dark",
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "base_keymap": "VSCode", // Atajos estilo VSCode
  "buffer_font_size": 14, // Tama√±o de fuente
  "buffer_line_height": "comfortable", // Altura de l√≠nea
  "cursor_shape": "block", // Forma del cursor
  "cursor_blink": true, // Cursor parpadeante

  // =========================
  // üõ†Ô∏è Funcionalidades
  // =========================
  "features": {
    "edit_prediction_provider": "copilot" // Usa GitHub Copilot para predicciones
  },
  "auto_update": true, // Auto actualizar Zed
  "autosave": "on_focus_change", // Guardar al cambiar de ventana
  "restore_on_startup": "none", // No restaurar sesiones previas
  "show_completions_on_input": true, // Mostrar autocompletado al escribir
  "auto_signature_help": true, // Ayuda de par√°metros (signature help)

  // =========================
  // üìÇ Navegaci√≥n UI
  // =========================
  "toolbar": {
    "breadcrumbs": false // Ocultar migas de pan
  },
  "minimap": {
    "show": "never",
    "display_in": "active_editor",
    "thumb": "always",
    "thumb_border": "left_open",
    "max_width_columns": 80,
    "current_line_highlight": null
  },
  "scrollbar": {
    "diagnostics": "all" // Mostrar diagn√≥sticos en la barra
  },

  // =========================
  // ü™ü Paneles activos
  // =========================
  "active_pane_modifiers": {
    "border_size": 0.0,
    "inactive_opacity": 1.0
  },

  // =========================
  // üêç Lenguajes / LSP
  // =========================
  "languages": {
    "Python": {
      "format_on_save": "on", // Formato autom√°tico al guardar
      "ensure_final_newline_on_save": true, // Asegurar newline al final
      "language_servers": ["ty", "ruff"], // LSPs activos
      "formatter": {
        // Configurar Ruff como formateador
        "external": {
          "command": "/home/ronnyascencio/.local/bin/ruff",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "JSON": {
      "format_on_save": "on", // Auto formatear JSON al guardar
      "formatter": "prettier" // Usar prettier si est√° disponible
    }
  },

  // =========================
  // ‚öôÔ∏è LSP (Configuraci√≥n avanzada de servidores)
  // =========================
  "lsp": {
    "ty": {
      "command": "/home/ronnyascencio/.local/bin/ty",
      "args": ["server"],
      "settings": {
        "ty": {
          "experimental": {
            "rename": true
          },
          "diagnosticMode": "workspace",
          "inlayHints": {
            "variableTypes": true,
            "callArgumentNames": false
          }
        }
      }
    }
  },
  // =========================
  // üñ•Ô∏è Terminal integrado
  // =========================
  "terminal": {
    "shell": "system", // Usar shell del sistema
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "working_directory": "current_project_directory",
    "blinking": "on",
    "env": {
      "PYTHONPATH": ".:./cli:./core:./dcc:./backend"
    }
  },

  // =========================
  // ‚ñ∂Ô∏è Tareas
  // =========================
  "tasks": {},

  // =========================
  // üîÄ Git
  // =========================
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    },
    "hunk_style": "staged_hollow"
  },

  // =========================
  // ü©∫ Diagn√≥sticos
  // =========================
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },

  // =========================
  // üìÑ Tipos de archivos
  // =========================
  "file_types": {
    "Python": ["py", "pyi"]
  }
}
